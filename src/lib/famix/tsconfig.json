{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "dist",
        "incremental": true,
        "pretty": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "declaration": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "alwaysStrict": true,
        "target": "es2017",
        "sourceMap": true
        },
    "filesGlob": [
        "./**/*.ts"
        ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}